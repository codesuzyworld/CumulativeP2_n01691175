
@{
    ViewBag.Title = "DeleteConfirm";
}

<div>
    <h2>Are you sure you want to delete @Model.TeacherFname @Model.TeacherLname ?</h2>
</div>

<div class="info">

    <h2>@Model.TeacherFname @Model.TeacherLname</h2>
    <p>Employee Number: @Model.EmployeeNumber</p>
    <p>Hire Date: @Model.HireDate</p>
    <p>Salary: @Model.Salary</p>

</div>

<div class="deleteconfirm">
    <form method="POST" action="/Teacher/Delete/@Model.TeacherId">
        <input type="submit" value="Delete Teacher" />
    </form>
</div>
